<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :eventDescription, "Event Description", style: "display: block" %>
    <%= form.text_area :eventDescription %>
  </div>

  <div>
    <%= form.label :eventDate, "Date & Time", style: "display: block" %>
    <%= form.datetime_field :eventDate %>
  </div>

  <div>
    <%= form.label :isVirtual, "Is this a virtual event?", style: "display: block" %>
    <%= form.radio_button :isVirtual, true, id: "is_virtual_yes" %>
    <%= form.label :isVirtual, "Yes", for: "is_virtual_yes" %>
  
    <%= form.radio_button :isVirtual, false, id: "is_virtual_no" %>
    <%= form.label :isVirtual, "No", for: "is_virtual_no" %>
  </div>

  <div id="virtual_event_url" style="display: none;">
    <%= form.label :meetingLink, "Meeting Link", style: "display: block" %>
    <%= form.text_field :meetingLink, class: "form-control" %>
  </div>

  <div>
    <%= form.label :street, "Street address", style: "display: block" %>
    <%= form.text_field :street, id: "street_field", class: "form-control" %>
  </div>

  <div>
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city, id: "city_field", class: "form-control" %>
  </div>

  <div>
    <%= form.label :zipcode, "ZIP Code", style: "display: block" %>
    <%= form.text_field :zipcode, id: "zipcode_field", class: "form-control" %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
